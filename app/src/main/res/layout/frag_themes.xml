<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="8dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/layoutRedColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPurpleColor">

        <ImageView
            android:id="@+id/imageViewRed"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_action_red" />

        <TextView
            android:id="@+id/textViewRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="@string/red"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPurpleColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutRedColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutBlueColor">

        <ImageView
            android:id="@+id/imageViewPurple"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_action_purple" />

        <TextView
            android:id="@+id/textViewPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="@string/purple"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBlueColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutPurpleColor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/imageViewBlue"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_action_blue" />

        <TextView
            android:id="@+id/textViewBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="@string/blue"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGreenColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutRedColor"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageViewGreen"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_action_green" />

        <TextView
            android:id="@+id/textViewGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Green"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOrangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutGreenColor"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageViewOrange"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_action_orange" />

        <TextView
            android:id="@+id/textViewOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Orange"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutPinkColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutOrangeColor"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageViewPink"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_action_pink" />

        <TextView
            android:id="@+id/textViewPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Pink"
            android:textSize="20sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>